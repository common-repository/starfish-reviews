<div class="tab-pane fade show active" id="filter" role="tabpanel" aria-labelledby="filter-tab">
    <div id="srm-collection-filter" class="card mt-1">
        <div class="card-body">
            <p class="card-text">Select what reviews will be displayed.</p>
            <div class="form-group">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm mb-3">
                            <label for="srm-collection-filters-profiles[]">Profile Selection</label>
                            <select name="srm-collection-filters-profiles[]" id="srm-collection-filters-profiles"
                                    class="selectpicker form-control form-control-sm"
                                    title="{% if profiles is empty %}No Profiles Available!{% else %}Select Profiles{% endif %}"
                                    multiple data-header="Select Profiles"
                                    data-size="5" data-live-search="true" data-max-options="2"
                                    {% if profiles is empty %}disabled{% endif %}>
                                {% for profile in profiles %}
                                    <option value="{{ profile['id'] }}"
                                            {% if profile['id'] in selected_profiles %}selected{% endif %}>{{ profile['name'] }}</option>
                                {% endfor %}
                            </select>
                            <small class="form-text text-muted">Select the Profiles from which to display reviews from
                                (2 max)</small>
                        </div>
                        <div class="col-sm mb-3">
                            <label for="srm-collection-filters-minrating">Minimum Rating</label>
                            <select class="form-control form-control-sm" name="srm-collection-filters-minrating"
                                    id="srm-collection-filters-minrating">
                                <option value="5" {% if min_rating is empty or min_rating == '5' %}selected{% endif %}>5
                                    (positive, 9-10)
                                </option>
                                <option value="4" {% if min_rating == '4' %}selected{% endif %}>4 (7-8)</option>
                                <option value="3" {% if min_rating == '3' %}selected{% endif %}>3 (neutral, 5-6)
                                </option>
                                <option value="2" {% if min_rating == '2' %}selected{% endif %}>2 (3-4)</option>
                                <option value="1" {% if min_rating == '1' %}selected{% endif %}>1 (negative, 1-2)
                                </option>
                                <option value="all" {% if min_rating == 'all' %}selected{% endif %}>Show All</option>
                            </select>
                        </div>
                        <div class="col-sm mb-3">
                            <label for="srm-collection-filters-maxreviews">Maximum Reviews</label>
                            <input name="srm-collection-filters-maxreviews" id="srm-collection-filters-maxreviews"
                                   type="text" class="form-control form-control-sm" value="{% if max_reviews is
                                empty %}25{% else %}{{ max_reviews }}{% endif %}"/>
                            <small class="form-text text-muted">"0" for unlimited</small>
                        </div>
                        <div class="col-sm mb-3">
                            <label for="srm-collection-filters-age">Age of Review</label>
                            <select class="form-control form-control-sm" name="srm-collection-filters-age"
                                    id="srm-collection-filters-age">
                                <option value="desc" {% if age is empty or age == 'desc' %}selected{% endif %}>Newest
                                </option>
                                <option value="asc" {% if age == 'asc' %}selected{% endif %}>Oldest</option>
                                <option value="range" {% if age == 'range' %}selected{% endif %}>Date Range</option>
                            </select>
                            <div id="srm-collection-profiles-dates" class="row mt-3">
                                <div class="col-sm mb-3">
                                    <label for="srm-collection-filters-startdate">Start Date</label>
                                    <input class="form-control form-control-sm" type="text"
                                           id="srm-collection-filters-startdate" name="srm-collection-filters-startdate"
                                           value="{% if start_date is not
                                               empty %}{{ start_date }}{% endif %}">
                                    <br/>
                                    <label for="srm-collection-filters-enddate">End Date</label>
                                    <input class="form-control form-control-sm" type="text"
                                           id="srm-collection-filters-enddate" name="srm-collection-filters-enddate"
                                           value="{% if end_date is not
                                               empty %}{{ end_date }}{% endif %}">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>